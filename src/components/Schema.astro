---
import { useTranslations } from "../utils/i18n";

interface Props {
    lang?: string;
}

const { lang = "en" } = Astro.props;
const t = useTranslations(lang);
---

<script
    type="application/ld+json"
    set:html={JSON.stringify({
        "@context": "https://schema.org",
        "@type": "WebApplication",
        name: `${t("hero.title")} - SaveTikFast`,
        url: "https://savetik-fast.xyz/",
        description: t("meta.description"),
        applicationCategory: "MultimediaApplication",
        operatingSystem: "All",
        offers: {
            "@type": "Offer",
            price: "0",
            priceCurrency: "USD",
        },
        aggregateRating: {
            "@type": "AggregateRating",
            ratingValue: "4.9",
            ratingCount: "15420",
            bestRating: "5",
        },
    })}
/>

<script
    type="application/ld+json"
    set:html={JSON.stringify({
        "@context": "https://schema.org",
        "@type": "FAQPage",
        mainEntity: [
            {
                "@type": "Question",
                name: t("faq.q1"),
                acceptedAnswer: {
                    "@type": "Answer",
                    text: t("faq.a1"),
                },
            },
            {
                "@type": "Question",
                name: t("faq.q2"),
                acceptedAnswer: {
                    "@type": "Answer",
                    text: t("faq.a2"),
                },
            },
        ],
    })}
/>

<script
    type="application/ld+json"
    set:html={JSON.stringify({
        "@context": "https://schema.org",
        "@type": "BreadcrumbList",
        itemListElement: [
            {
                "@type": "ListItem",
                position: 1,
                name: "Home",
                item: `https://savetik-fast.xyz${lang === "en" ? "" : "/" + lang}`,
            },
        ],
    })}
/>
