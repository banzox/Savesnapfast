---
import { useTranslations } from "../utils/i18n";

const { lang = "en" } = Astro.props;
const t = useTranslations(lang);

const navItems = [
    {
        id: "video",
        icon: "fas fa-video",
        label: t("nav_menu.video"),
        href: lang === "en" ? "/" : `/${lang}`,
        activeCheck: (path: string) =>
            !path.includes("mp3") &&
            !path.includes("story") &&
            !path.includes("slideshow"),
    },
    {
        id: "mp3",
        icon: "fas fa-music",
        label: t("nav_menu.mp3"),
        href: lang === "en" ? "/mp3" : `/${lang}/mp3`,
        activeCheck: (path: string) => path.includes("mp3"),
    },
    {
        id: "story",
        icon: "fas fa-images",
        label: t("nav_menu.stories"),
        href: lang === "en" ? "/story" : `/${lang}/story`,
        activeCheck: (path: string) => path.includes("story"),
    },
    {
        id: "slideshow",
        icon: "fas fa-layer-group",
        label: t("nav_menu.slideshow"),
        href: lang === "en" ? "/slideshow" : `/${lang}/slideshow`,
        activeCheck: (path: string) => path.includes("slideshow"),
    },
];

const currentPath = Astro.url.pathname;
---

<header id="main-header">
    <div class="header-container">
        {/* Top Row: Logo & Theme Toggle */}
        <div class="top-bar">
            <a
                href={`/${lang === "en" ? "" : lang}`}
                class="logo"
                aria-label="SaveTikFast"
            >
                <div class="logo-icon-wrapper">
                    <i class="fab fa-tiktok"></i>
                </div>
                <span class="logo-text"
                    >SaveTik<span class="highlight">Fast</span></span
                >
            </a>

            <button
                class="theme-toggle"
                id="theme-btn"
                aria-label="Toggle Dark/Light Mode"
                title="Toggle Theme"
            >
                <div class="theme-icon-container">
                    <i class="fas fa-moon moon-icon"></i>
                    <i class="fas fa-sun sun-icon"></i>
                </div>
            </button>
        </div>

        {/* Bottom Row: Navigation */}
        <nav class="nav-bar">
            {
                navItems.map((item) => (
                    <a
                        href={item.href}
                        class={`nav-item ${item.activeCheck(currentPath) ? "active" : ""}`}
                    >
                        <i class={item.icon} />
                        <span>{item.label}</span>
                    </a>
                ))
            }
        </nav>
    </div>
</header>

<script is:inline>
    // Theme Logic
    (function () {
        function getTheme() {
            if (
                typeof localStorage !== "undefined" &&
                localStorage.getItem("theme")
            ) {
                return localStorage.getItem("theme");
            }
            if (window.matchMedia("(prefers-color-scheme: light)").matches) {
                return "light";
            }
            return "dark";
        }

        function applyTheme(theme) {
            if (theme === "light") {
                document.documentElement.setAttribute("data-theme", "light");
            } else {
                document.documentElement.removeAttribute("data-theme");
            }
            localStorage.setItem("theme", theme);
            updateThemeIcon(theme);
        }

        function updateThemeIcon(theme) {
            const btn = document.getElementById("theme-btn");
            if (btn) {
                if (theme === "light") {
                    btn.classList.add("light-mode-active");
                } else {
                    btn.classList.remove("light-mode-active");
                }
            }
        }

        function initTheme() {
            const currentTheme = getTheme();
            applyTheme(currentTheme);

            const btn = document.getElementById("theme-btn");
            if (btn) {
                const newBtn = btn.cloneNode(true);
                btn.parentNode.replaceChild(newBtn, btn);

                newBtn.addEventListener("click", () => {
                    const current = getTheme();
                    const next = current === "dark" ? "light" : "dark";
                    applyTheme(next);
                });
            }
        }

        initTheme();
        document.addEventListener("astro:after-swap", initTheme);
    })();
</script>

<style>
    /* 
    ========================================
    HEADER CONTAINER
    ========================================
    */
    #main-header {
        position: sticky;
        top: 0;
        z-index: 2000;
        width: 100%;
        background: rgba(10, 10, 20, 0.85); /* Dark base */
        backdrop-filter: blur(20px);
        -webkit-backdrop-filter: blur(20px);
        border-bottom: 1px solid rgba(255, 255, 255, 0.08);
        padding: 15px 0;
        transition: all 0.3s ease;
    }

    :global([data-theme="light"]) #main-header {
        background: rgba(255, 255, 255, 0.9);
        border-bottom: 1px solid rgba(0, 0, 0, 0.05);
        box-shadow: 0 4px 20px rgba(0, 0, 0, 0.03);
    }

    .header-container {
        width: 100%;
        max-width: 1200px;
        margin: 0 auto;
        padding: 0 20px;
        display: flex;
        flex-direction: column;
        gap: 20px;
    }

    /* 
    ========================================
    TOP BAR (Logo + Toggle)
    ========================================
    */
    .top-bar {
        display: flex;
        align-items: center;
        justify-content: space-between;
        width: 100%;
    }

    /* Logo Styling */
    .logo {
        display: flex;
        align-items: center;
        gap: 12px;
        text-decoration: none;
        color: var(--text-main, #fff);
        font-weight: 800;
        font-size: 1.5rem;
    }

    :global([data-theme="light"]) .logo {
        color: #000;
    }

    .logo-icon-wrapper {
        width: 40px;
        height: 40px;
        background: linear-gradient(135deg, #00f2ea 0%, #ff0050 100%);
        border-radius: 12px;
        display: flex;
        align-items: center;
        justify-content: center;
        font-size: 1.3rem;
        color: white;
        box-shadow: 0 4px 15px rgba(255, 0, 80, 0.3);
        transition: transform 0.3s ease;
    }

    .logo:hover .logo-icon-wrapper {
        transform: rotate(-10deg) scale(1.05);
    }

    .highlight {
        background: linear-gradient(to right, #00f2ea, #ff0050);
        -webkit-background-clip: text;
        -webkit-text-fill-color: transparent;
    }

    /* Theme Toggle */
    .theme-toggle {
        width: 44px;
        height: 44px;
        border-radius: 50%;
        background: rgba(255, 255, 255, 0.05);
        border: 1px solid rgba(255, 255, 255, 0.1);
        color: #e0e0e0;
        cursor: pointer;
        display: flex;
        align-items: center;
        justify-content: center;
        overflow: hidden;
        transition: all 0.3s ease;
    }

    :global([data-theme="light"]) .theme-toggle {
        background: rgba(0, 0, 0, 0.05);
        border-color: rgba(0, 0, 0, 0.1);
        color: #333;
    }

    .theme-toggle:hover {
        transform: scale(1.05);
        background: rgba(255, 255, 255, 0.1);
    }

    .theme-icon-container {
        position: relative;
        width: 100%;
        height: 100%;
    }

    .moon-icon,
    .sun-icon {
        position: absolute;
        top: 50%;
        left: 50%;
        transform: translate(-50%, -50%);
        transition: all 0.5s cubic-bezier(0.23, 1, 0.32, 1);
    }

    .sun-icon {
        transform: translate(-50%, 150%);
        opacity: 0;
    }

    .moon-icon {
        opacity: 1;
    }

    :global([data-theme="light"]) .sun-icon {
        transform: translate(-50%, -50%);
        opacity: 1;
        color: #f59e0b;
    }

    :global([data-theme="light"]) .moon-icon {
        transform: translate(-50%, -150%);
        opacity: 0;
    }

    /* 
    ========================================
    NAV BAR (Buttons)
    ========================================
    */
    .nav-bar {
        display: flex;
        align-items: center;
        justify-content: center;
        gap: 15px;
        flex-wrap: wrap;
    }

    .nav-item {
        display: flex;
        align-items: center;
        gap: 8px;
        text-decoration: none;
        color: var(--text-dim, rgba(255, 255, 255, 0.6));
        font-weight: 600;
        font-size: 0.95rem;
        padding: 10px 20px;
        border-radius: 50px;
        background: rgba(255, 255, 255, 0.03);
        border: 1px solid rgba(255, 255, 255, 0.05);
        transition: all 0.3s ease;
    }

    :global([data-theme="light"]) .nav-item {
        background: rgba(0, 0, 0, 0.03);
        border-color: rgba(0, 0, 0, 0.05);
        color: #666;
    }

    .nav-item:hover {
        background: rgba(255, 255, 255, 0.1);
        color: #fff;
        transform: translateY(-2px);
    }

    :global([data-theme="light"]) .nav-item:hover {
        background: rgba(0, 0, 0, 0.08);
        color: #000;
    }

    /* Active State */
    .nav-item.active {
        background: linear-gradient(135deg, #ff0050 0%, #00f2ea 100%);
        color: #fff !important;
        border: 1px solid transparent;
        box-shadow: 0 4px 15px rgba(255, 0, 80, 0.3);
    }

    .nav-item i {
        font-size: 1.1rem;
    }

    /* 
    ========================================
    RESPONSIVE
    ========================================
    */
    @media (max-width: 600px) {
        .header-container {
            gap: 15px;
            padding: 0 15px;
        }

        .logo-text {
            font-size: 1.3rem; /* Slightly smaller logo on mobile */
        }

        .nav-bar {
            gap: 8px;
            display: grid;
            grid-template-columns: repeat(
                2,
                1fr
            ); /* 2x2 Grid for buttons on mobile */
            width: 100%;
        }

        .nav-item {
            justify-content: center;
            padding: 12px;
            font-size: 0.9rem;
            border-radius: 12px; /* Less rounded for grid feeling */
        }
    }
</style>
