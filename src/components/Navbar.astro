---
import { languages } from "../i18n/ui";
import { useTranslations } from "../utils/i18n";
import LanguageSelector from "./LanguageSelector.astro";
const { lang = "en" } = Astro.props;
const t = useTranslations(lang);
---

<header id="main-header">
    <nav class="nav-container">
        <!-- 1. Logo (Left) -->
        <a
            href={`/${lang === "en" ? "" : lang}`}
            class="logo"
            aria-label="SaveTikFast Home"
        >
            <div class="logo-icon-wrapper">
                <i class="fab fa-tiktok"></i>
            </div>
            <span class="logo-text"
                >SaveTik<span class="highlight">Fast</span></span
            >
        </a>

        <!-- 2. Navigation Links (Center - Desktop Only) -->
        <div class="nav-links" id="nav-links">
            <nav class="nav-menu">
                <a
                    href={`/${lang === "en" ? "" : lang}`}
                    class={!Astro.url.pathname.includes("mp3") &&
                    !Astro.url.pathname.includes("story") &&
                    !Astro.url.pathname.includes("slideshow")
                        ? "active"
                        : ""}
                >
                    <i class="fas fa-video"></i>
                    <span>{t("nav_menu.video")}</span>
                </a>
                <a
                    href={`/${lang === "en" ? "mp3" : lang + "/mp3"}`}
                    class={Astro.url.pathname.includes("mp3") ? "active" : ""}
                >
                    <i class="fas fa-music"></i>
                    <span>{t("nav_menu.mp3")}</span>
                </a>
                <a
                    href={`/${lang === "en" ? "story" : lang + "/story"}`}
                    class={Astro.url.pathname.includes("story") ? "active" : ""}
                >
                    <i class="fas fa-images"></i>
                    <span>{t("nav_menu.stories")}</span>
                </a>
                <a
                    href={`/${lang === "en" ? "slideshow" : lang + "/slideshow"}`}
                    class={Astro.url.pathname.includes("slideshow")
                        ? "active"
                        : ""}
                >
                    <i class="fas fa-layer-group"></i>
                    <span>{t("nav_menu.slideshow")}</span>
                </a>
            </nav>
        </div>

        <!-- Mobile Sidebar Overlay -->
        <div id="nav-overlay" class="nav-overlay"></div>

        <!-- 3. Controls (Right) -->
        <div class="nav-controls">
            <!-- Theme Toggle -->
            <button
                class="theme-toggle"
                id="theme-btn"
                aria-label="Toggle Dark/Light Mode"
                title="Toggle Theme"
            >
                <div class="theme-icon-container">
                    <i class="fas fa-moon moon-icon"></i>
                    <i class="fas fa-sun sun-icon"></i>
                </div>
            </button>

            <!-- Language Selector -->
            <div class="lang-wrapper">
                <LanguageSelector lang={lang} />
            </div>

            <!-- Hamburger (Mobile) -->
            <button class="hamburger" id="menu-btn" aria-label="Menu">
                <div class="hamburger-box">
                    <span class="hamburger-inner"></span>
                </div>
            </button>
        </div>
    </nav>
</header>

<script is:inline>
    // Theme Logic
    (function () {
        // Function to get current theme
        function getTheme() {
            if (
                typeof localStorage !== "undefined" &&
                localStorage.getItem("theme")
            ) {
                return localStorage.getItem("theme");
            }
            if (window.matchMedia("(prefers-color-scheme: light)").matches) {
                return "light";
            }
            return "dark"; // Default to dark
        }

        // Apply theme to document
        function applyTheme(theme) {
            if (theme === "light") {
                document.documentElement.setAttribute("data-theme", "light");
            } else {
                document.documentElement.removeAttribute("data-theme");
            }
            localStorage.setItem("theme", theme);
            updateThemeIcon(theme);
        }

        // Update the icon based on theme
        function updateThemeIcon(theme) {
            const btn = document.getElementById("theme-btn");
            if (btn) {
                // Visual update handled by CSS mostly, but we can add classes if needed
                if (theme === "light") {
                    btn.classList.add("light-mode-active");
                } else {
                    btn.classList.remove("light-mode-active");
                }
            }
        }

        // Initialize on load
        function initTheme() {
            const currentTheme = getTheme();
            applyTheme(currentTheme);

            const btn = document.getElementById("theme-btn");
            if (btn) {
                // Remove old listeners to prevent stacking
                const newBtn = btn.cloneNode(true);
                btn.parentNode.replaceChild(newBtn, btn);

                newBtn.addEventListener("click", () => {
                    const current = getTheme();
                    const next = current === "dark" ? "light" : "dark";
                    applyTheme(next);
                });
            }
        }

        // Run immediately
        initTheme();

        // Re-run on View Transitions
        document.addEventListener("astro:after-swap", initTheme);
    })();
</script>

<script>
    // Menu Logic
    document.addEventListener("astro:page-load", () => {
        const hamburger = document.getElementById("hamburger");
        const navLinks = document.getElementById("nav-links");

        if (!hamburger || !navLinks) return;

        // Clone to remove old listeners (Safety pattern)
        const newHamburger = hamburger.cloneNode(true) as HTMLElement;
        hamburger.parentNode?.replaceChild(newHamburger, hamburger);

        const toggleMenu = (e: Event) => {
            e.preventDefault();
            e.stopPropagation();
            const isActive = navLinks.classList.toggle("active");
            newHamburger.classList.toggle("active");

            const overlay = document.getElementById("nav-overlay");
            if (overlay) {
                if (isActive) overlay.classList.add("active");
                else overlay.classList.remove("active");
            }

            document.body.style.overflow = isActive ? "hidden" : "";
        };

        newHamburger.addEventListener("click", toggleMenu);

        // Close when clicking links
        const links = navLinks.querySelectorAll("a");
        links.forEach((link) => {
            link.addEventListener("click", () => {
                navLinks.classList.remove("active");
                newHamburger.classList.remove("active");
                document.body.style.overflow = "";
            });
        });

        // Close when clicking outside or on overlay
        const closeOnClickOutside = (e: Event) => {
            const overlay = document.getElementById("nav-overlay");

            if (navLinks.classList.contains("active")) {
                // If click is on overlay OR outside menu/hamburger
                if (
                    e.target === overlay ||
                    (!navLinks.contains(e.target as Node) &&
                        !newHamburger.contains(e.target as Node))
                ) {
                    navLinks.classList.remove("active");
                    newHamburger.classList.remove("active");
                    overlay?.classList.remove("active");
                    document.body.style.overflow = "";
                }
            }
        };

        document.addEventListener("click", closeOnClickOutside);
    });
</script>

<style>
    :global(body) {
        overflow-x: hidden;
        width: 100%;
        position: relative;
    }

    /* 
    ========================================
    PREMIUM NAVBAR STYLES (VIP)
    ========================================
    */

    #main-header {
        position: sticky;
        top: 0;
        z-index: 2000;
        width: 100%;
        height: 70px;
        background: rgba(10, 10, 20, 0.85);
        backdrop-filter: blur(16px);
        -webkit-backdrop-filter: blur(16px);
        border-bottom: 1px solid rgba(255, 255, 255, 0.08);
        transition: all 0.3s ease;
        box-shadow: 0 4px 30px rgba(0, 0, 0, 0.1);
    }

    :global([data-theme="light"]) #main-header {
        background: rgba(255, 255, 255, 0.9);
        border-bottom: 1px solid rgba(0, 0, 0, 0.05);
        box-shadow: 0 4px 20px rgba(0, 0, 0, 0.05);
    }

    .nav-container {
        width: 100%;
        max-width: 1400px; /* Radical Fix: Constrain width */
        margin: 0 auto; /* Center it */
        height: 100%;
        display: flex;
        align-items: center;
        justify-content: space-between;
        padding: 0 20px;
        position: relative;
    }

    /* --- LOGO --- */
    .logo {
        display: flex;
        align-items: center;
        gap: 10px;
        text-decoration: none;
        color: var(--text-main, #fff);
        font-weight: 800;
        font-size: 1.5rem;
        letter-spacing: -0.5px;
        z-index: 2002;
    }

    :global([data-theme="light"]) .logo {
        color: #000000;
    }

    .logo-icon-wrapper {
        width: 38px;
        height: 38px;
        background: linear-gradient(135deg, #00f2ea 0%, #ff0050 100%);
        border-radius: 10px;
        display: flex;
        align-items: center;
        justify-content: center;
        font-size: 1.2rem;
        color: white;
        box-shadow: 0 4px 15px rgba(255, 0, 80, 0.3);
    }

    .highlight {
        background: linear-gradient(to right, #00f2ea, #ff0050);
        -webkit-background-clip: text;
        -webkit-text-fill-color: transparent;
    }

    /* --- NAV LINKS (Desktop) --- */
    .nav-links {
        position: absolute;
        left: 50%;
        transform: translateX(-50%);
        height: 100%;
        display: flex;
        align-items: center;
    }

    .nav-menu {
        display: flex;
        gap: 4px;
        background: rgba(255, 255, 255, 0.03);
        padding: 4px;
        border-radius: 50px;
        border: 1px solid rgba(255, 255, 255, 0.05);
    }

    :global([data-theme="light"]) .nav-menu {
        background: rgba(0, 0, 0, 0.04);
        border-color: rgba(0, 0, 0, 0.05);
    }

    .nav-menu a {
        display: flex;
        align-items: center;
        gap: 8px;
        text-decoration: none;
        color: var(--text-muted, rgba(255, 255, 255, 0.6));
        font-weight: 500;
        font-size: 0.9rem;
        padding: 8px 16px;
        border-radius: 40px;
        transition: all 0.3s ease;
    }

    :global([data-theme="light"]) .nav-menu a {
        color: #666;
    }

    .nav-menu a.active {
        background: rgba(255, 255, 255, 0.1);
        color: #fff;
    }

    :global([data-theme="light"]) .nav-menu a.active {
        background: #fff;
        color: #ff0050;
        box-shadow: 0 2px 8px rgba(0, 0, 0, 0.05);
    }

    /* --- CONTROLS (Right) --- */
    .nav-controls {
        display: flex;
        align-items: center;
        gap: 12px;
    }

    .theme-toggle {
        width: 42px;
        height: 42px;
        border-radius: 50%;
        background: rgba(255, 255, 255, 0.03);
        border: 1px solid rgba(255, 255, 255, 0.1);
        color: #e0e0e0;
        cursor: pointer;
        display: flex;
        align-items: center;
        justify-content: center;
        overflow: hidden;
        position: relative;
    }

    :global([data-theme="light"]) .theme-toggle {
        background: #f5f5f5;
        border-color: #e5e5e5;
        color: #333;
    }

    .theme-icon-container {
        position: relative;
        width: 100%;
        height: 100%;
        display: flex;
        align-items: center;
        justify-content: center;
    }

    .theme-toggle i {
        position: absolute;
        transition: all 0.5s;
    }

    .sun-icon {
        transform: translateY(150%);
        opacity: 0;
    }
    .moon-icon {
        transform: translateY(0);
        opacity: 1;
    }

    :global([data-theme="light"]) .sun-icon {
        transform: translateY(0);
        opacity: 1;
        color: #f59e0b;
    }
    :global([data-theme="light"]) .moon-icon {
        transform: translateY(-150%);
        opacity: 0;
    }

    /* Hamburger (Mobile) */
    .hamburger {
        display: none;
        width: 42px;
        height: 42px;
        background: transparent;
        border: none;
        cursor: pointer;
        z-index: 2005;
    }

    .hamburger-box {
        width: 24px;
        height: 20px;
        display: inline-block;
        position: relative;
    }

    .hamburger-inner {
        display: block;
        top: 50%;
        margin-top: -1px;
    }

    .hamburger-inner,
    .hamburger-inner::before,
    .hamburger-inner::after {
        width: 24px;
        height: 2px;
        background-color: var(--text-main, #fff);
        border-radius: 2px;
        position: absolute;
        transition: transform 0.15s ease;
    }

    :global([data-theme="light"]) .hamburger-inner,
    :global([data-theme="light"]) .hamburger-inner::before,
    :global([data-theme="light"]) .hamburger-inner::after {
        background-color: #333;
    }

    .hamburger-inner::before {
        top: -8px;
        content: "";
        display: block;
    }
    .hamburger-inner::after {
        bottom: -8px;
        content: "";
        display: block;
    }

    .hamburger.active .hamburger-inner {
        transform: rotate(45deg);
    }
    .hamburger.active .hamburger-inner::before {
        top: 0;
        opacity: 0;
    }
    .hamburger.active .hamburger-inner::after {
        bottom: 0;
        transform: rotate(-90deg);
    }

    /* 
    ========================================
    SIDEBAR DRAWER (MOBILE)
    ========================================
    */
    @media (max-width: 968px) {
        .nav-links {
            position: fixed;
            top: 0;
            right: 0;
            left: auto;
            bottom: 0;
            width: 75%; /* Strict width requirement */
            height: 100vh;
            background: rgba(10, 10, 20, 0.98);
            backdrop-filter: blur(25px);
            -webkit-backdrop-filter: blur(25px);
            flex-direction: column;
            justify-content: center;
            align-items: center;
            padding: 20px;
            transform: translateX(100%);
            transition:
                transform 0.4s cubic-bezier(0.16, 1, 0.3, 1),
                visibility 0s 0.4s;
            z-index: 2005;
            box-shadow: -5px 0 30px rgba(0, 0, 0, 0.5);
            visibility: hidden;
            touch-action: none;
        }

        :global([data-theme="light"]) .nav-links {
            background: rgba(255, 255, 255, 0.98);
        }

        .nav-links.active {
            transform: translateX(0);
            visibility: visible;
            transition:
                transform 0.4s cubic-bezier(0.16, 1, 0.3, 1),
                visibility 0s;
        }

        /* Separate Overlay */
        .nav-overlay {
            position: fixed;
            top: 0;
            left: 0;
            width: 100vw;
            height: 100vh;
            background: rgba(0, 0, 0, 0.6);
            z-index: 2004; /* Below sidebar */
            opacity: 0;
            pointer-events: none;
            transition: opacity 0.4s ease;
            backdrop-filter: blur(3px);
            -webkit-backdrop-filter: blur(3px);
        }

        .nav-overlay.active {
            opacity: 1;
            pointer-events: auto;
        }

        /* REMOVED ::before styles, replaced by .nav-overlay */
        .nav-links::before {
            display: none;
        }

        .nav-menu {
            flex-direction: column;
            width: 100%;
            background: transparent;
            border: none;
            gap: 20px;
        }

        .nav-menu a {
            width: 100%;
            justify-content: center;
            padding: 15px;
            font-size: 1.2rem;
        }

        .hamburger {
            display: flex;
            align-items: center;
            justify-content: center;
        }

        /* Hide logo text in very small screens if needed, 
           or keep it because we have space now */
    }
</style>
