---
import { useTranslations } from "../utils/i18n";

const { lang = "en" } = Astro.props;
const t = useTranslations(lang);

const navItems = [
    {
        id: "video",
        icon: "fas fa-video",
        label: t("nav_menu.video"),
        href: lang === "en" ? "/" : `/${lang}`,
        activeCheck: (path: string) =>
            !path.includes("mp3") &&
            !path.includes("story") &&
            !path.includes("slideshow"),
    },
    {
        id: "mp3",
        icon: "fas fa-music",
        label: t("nav_menu.mp3"),
        href: lang === "en" ? "/mp3" : `/${lang}/mp3`,
        activeCheck: (path: string) => path.includes("mp3"),
    },
    {
        id: "story",
        icon: "fas fa-images",
        label: t("nav_menu.stories"),
        href: lang === "en" ? "/story" : `/${lang}/story`,
        activeCheck: (path: string) => path.includes("story"),
    },
    {
        id: "slideshow",
        icon: "fas fa-layer-group",
        label: t("nav_menu.slideshow"),
        href: lang === "en" ? "/slideshow" : `/${lang}/slideshow`,
        activeCheck: (path: string) => path.includes("slideshow"),
    },
];

const currentPath = Astro.url.pathname;
---

<header id="main-header">
    <div class="header-container">
        {/* Top Row: Logo & Theme Toggle */}
        <div class="top-bar">
            <a
                href={`/${lang === "en" ? "" : lang}`}
                class="logo"
                aria-label="SaveTikFast"
            >
                <div class="logo-icon-wrapper">
                    <i class="fab fa-tiktok"></i>
                </div>
                <span class="logo-text"
                    >SaveTik<span class="highlight">Fast</span></span
                >
            </a>

            <button
                class="theme-toggle"
                id="theme-btn"
                role="switch"
                aria-checked="false"
                aria-label={t("common.toggle_theme")}
                title={t("common.toggle_theme")}
            >
                <div class="theme-icon-container">
                    <i class="fas fa-moon moon-icon"></i>
                    <i class="fas fa-sun sun-icon"></i>
                </div>
            </button>
        </div>

        {/* Bottom Row: Navigation */}
        <nav class="nav-bar">
            {
                navItems.map((item) => (
                    <a
                        href={item.href}
                        class={`nav-item ${item.activeCheck(currentPath) ? "active" : ""}`}
                    >
                        <i class={item.icon} />
                        <span>{item.label}</span>
                    </a>
                ))
            }
        </nav>
    </div>
</header>

<script is:inline>
    // Theme Toggle Button Logic (uses global __theme from Layout)
    (function () {
        function updateIcon(theme) {
            const btn = document.getElementById("theme-btn");
            if (!btn) return;
            btn.classList.toggle("light-mode-active", theme === "light");
            btn.setAttribute(
                "aria-checked",
                theme === "light" ? "true" : "false",
            );
        }

        function initToggle() {
            const btn = document.getElementById("theme-btn");
            if (!btn) return;

            // Update icon to match current theme
            const currentTheme = window.__theme?.getTheme() || "dark";
            updateIcon(currentTheme);

            // Only add listener if not already initialized
            if (!btn.dataset.themeInit) {
                btn.addEventListener("click", () => {
                    const newTheme = window.__theme?.toggle();
                    if (newTheme) updateIcon(newTheme);
                });
                btn.dataset.themeInit = "true";
            }
        }

        // Listen for theme changes (from anywhere)
        window.addEventListener("theme-changed", (e) => {
            updateIcon(e.detail?.theme);
        });

        // Initialize on load and after page transitions
        initToggle();
        document.addEventListener("astro:page-load", initToggle);
    })();
</script>

<style>
    /* 
    ========================================
    HEADER CONTAINER
    ========================================
    */
    #main-header {
        position: relative; /* Static positioning as requested */
        width: 100%;
        background: transparent; /* Removed black box */
        padding: 20px 0;
        z-index: 2000;
    }

    .header-container {
        width: 100%;
        max-width: 1200px;
        margin: 0 auto;
        padding: 0 20px;
        display: flex;
        flex-direction: column;
        gap: 25px; /* Better spacing between top and bottom rows */
    }

    /* 
    ========================================
    TOP BAR (Logo + Toggle)
    ========================================
    */
    .top-bar {
        display: flex;
        align-items: center;
        justify-content: space-between;
        width: 100%;
    }

    /* Logo Styling */
    .logo {
        display: flex;
        align-items: center;
        gap: 12px;
        text-decoration: none;
        color: var(--text-main, #fff);
        font-weight: 800;
        font-size: 1.6rem;
    }

    :global([data-theme="light"]) .logo {
        color: #2563eb; /* Blue for SaveTik */
    }

    .logo-icon-wrapper {
        width: 42px;
        height: 42px;
        background: linear-gradient(135deg, #00f2ea 0%, #ff0050 100%);
        border-radius: 8px;
        display: flex;
        align-items: center;
        justify-content: center;
        font-size: 1.4rem;
        color: white;
        box-shadow: 0 4px 15px rgba(255, 0, 80, 0.3);
        transition: all 0.3s ease;
    }

    :global([data-theme="light"]) .logo-icon-wrapper {
        background: #0a0a0a; /* Black Box */
        color: #ff0050; /* Red Icon */
        box-shadow:
            0 4px 15px rgba(0, 0, 0, 0.25),
            0 0 0 1px rgba(255, 0, 80, 0.2);
        border: 1px solid rgba(255, 0, 80, 0.3);
    }

    .logo:hover .logo-icon-wrapper {
        transform: rotate(-10deg) scale(1.05);
    }

    .logo-text {
        letter-spacing: -0.5px;
    }

    .highlight {
        background: linear-gradient(to right, #00f2ea, #ff0050);
        -webkit-background-clip: text;
        -webkit-text-fill-color: transparent;
    }

    :global([data-theme="light"]) .highlight {
        background: none;
        -webkit-text-fill-color: #dc2626; /* Red for Fast */
        color: #dc2626;
    }

    /* Theme Toggle - Enhanced */
    .theme-toggle {
        width: 48px;
        height: 48px;
        border-radius: 8px;
        background: rgba(255, 255, 255, 0.05);
        border: 1px solid rgba(255, 255, 255, 0.1);
        color: #e0e0e0;
        cursor: pointer;
        display: flex;
        align-items: center;
        justify-content: center;
        overflow: hidden;
        transition: all 0.3s cubic-bezier(0.175, 0.885, 0.32, 1.275);
        box-shadow: 0 4px 10px rgba(0, 0, 0, 0.1);
    }

    :global([data-theme="light"]) .theme-toggle {
        background: #ffffff;
        border-color: #e5e7eb;
        color: #333;
        box-shadow: 0 4px 10px rgba(0, 0, 0, 0.05);
    }

    .theme-toggle:hover {
        transform: scale(1.1);
        border-color: var(--secondary);
    }

    :global([data-theme="light"]) .theme-toggle:hover {
        border-color: var(--primary);
    }

    .theme-icon-container {
        position: relative;
        width: 100%;
        height: 100%;
    }

    .moon-icon,
    .sun-icon {
        position: absolute;
        top: 50%;
        left: 50%;
        transform: translate(-50%, -50%);
        transition: all 0.5s cubic-bezier(0.23, 1, 0.32, 1);
        font-size: 1.2rem;
    }

    .sun-icon {
        transform: translate(-50%, 150%) rotate(90deg);
        opacity: 0;
    }

    .moon-icon {
        opacity: 1;
        transform: translate(-50%, -50%) rotate(0);
        color: #00f2ea;
    }

    :global([data-theme="light"]) .sun-icon {
        transform: translate(-50%, -50%) rotate(0);
        opacity: 1;
        color: #f59e0b;
    }

    :global([data-theme="light"]) .moon-icon {
        transform: translate(-50%, -150%) rotate(-90deg);
        opacity: 0;
    }

    /* 
    ========================================
    NAV BAR (Buttons)
    ========================================
    */
    .nav-bar {
        display: flex;
        align-items: center;
        justify-content: center;
        gap: 8px;
        flex-wrap: wrap;
        background: rgba(255, 255, 255, 0.03);
        padding: 8px;
        border-radius: 8px;
        border: 1px solid rgba(255, 255, 255, 0.05);
        width: fit-content;
        margin: 0 auto;
    }

    :global([data-theme="light"]) .nav-bar {
        background: #ffffff;
        border-color: rgba(0, 0, 0, 0.05);
        box-shadow: 0 10px 30px rgba(0, 0, 0, 0.05);
    }

    .nav-item {
        display: flex;
        align-items: center;
        gap: 8px;
        text-decoration: none;
        color: var(--text-dim, rgba(255, 255, 255, 0.7));
        font-weight: 600;
        font-size: 0.95rem;
        padding: 10px 24px;
        border-radius: 6px;
        transition: all 0.3s ease;
        border: 1px solid transparent; /* No border by default */
        box-shadow: none;
    }

    .nav-item:hover {
        background: rgba(255, 255, 255, 0.1);
        color: #fff;
        /* Subtle glow instead of border */
        box-shadow: 0 0 15px rgba(255, 255, 255, 0.1);
    }

    /* Active State - Keep gradient but remove border artifact if any */
    .nav-item.active {
        background: linear-gradient(
            135deg,
            var(--primary) 0%,
            var(--secondary) 100%
        );
        color: #fff !important;
        box-shadow: 0 4px 15px var(--primary-glow);
        border: none;
    }

    .nav-item i {
        font-size: 1.1rem;
    }

    /* 
    ========================================
    RESPONSIVE
    ========================================
    */
    @media (max-width: 600px) {
        .header-container {
            gap: 20px;
            padding: 0 15px;
        }

        .nav-bar {
            width: 100%;
            border-radius: 20px;
            padding: 5px;
            gap: 5px;
            display: grid;
            grid-template-columns: repeat(2, 1fr);
        }

        .nav-item {
            justify-content: center;
            padding: 12px;
            font-size: 0.9rem;
            border-radius: 15px;
        }
    }
</style>
