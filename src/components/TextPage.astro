---
import Layout from "../layouts/Layout.astro";
import { useTranslations } from "../utils/i18n";

interface Props {
    titleKey: string;
    contentKey: string;
    lang: string;
}

const { titleKey, contentKey, lang } = Astro.props;
const t = useTranslations(lang);
---

<Layout title={t(titleKey)} description={t(titleKey)} lang={lang}>
    <section class="page-header">
        <div class="container">
            <h1>{t(titleKey)}</h1>
        </div>
    </section>

    <section class="content-section">
        <div class="container">
            <div class="text-content">
                <Fragment set:html={t(contentKey)} />
            </div>
        </div>
    </section>
</Layout>

<style>
    .page-header {
        background: var(--surface);
        padding: 4rem 0;
        text-align: center;
        border-bottom: 1px solid var(--border);
    }

    .page-header h1 {
        font-size: 2.5rem;
        font-weight: 800;
        background: linear-gradient(
            135deg,
            var(--primary) 0%,
            var(--secondary) 100%
        );
        -webkit-background-clip: text;
        -webkit-text-fill-color: transparent;
        margin: 0;
    }

    .content-section {
        padding: 4rem 0;
    }

    .text-content {
        max-width: 800px;
        margin: 0 auto;
        font-size: 1.1rem;
        line-height: 1.8;
        color: var(--text-main);
    }

    /* Simulate prose styling for injected HTML */
    .text-content :global(h2) {
        font-size: 1.8rem;
        margin-top: 2rem;
        margin-bottom: 1rem;
        color: var(--text-main);
    }

    .text-content :global(p) {
        margin-bottom: 1.5rem;
    }

    .text-content :global(ul) {
        margin-bottom: 1.5rem;
        padding-left: 1.5rem;
    }

    .text-content :global(li) {
        margin-bottom: 0.5rem;
    }
</style>
