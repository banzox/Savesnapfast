import { languages, defaultLang } from "../i18n/ui";

import { useTranslations } from "../utils/i18n";

const { lang = "en" } = Astro.props;
const t = useTranslations(lang);
// Ensure we use the languages map imported from the source of truth
const currentLangName =
    languages[lang as keyof typeof languages] || languages["en"];

const pathname = Astro.url.pathname;
const search = Astro.url.search;

function getPathForLanguage(targetLang: string) {
    let currentPath = pathname;

    // Remove trailing slash
    if (currentPath.endsWith("/") && currentPath.length > 1) {
        currentPath = currentPath.slice(0, -1);
    }

    // --- EXPLICIT FORCE FIX FOR TOOLS ---
    // Verify if we are on a specific tool page regardless of current language prefix
    const isMp3 = currentPath.includes("/mp3");
    const isStory = currentPath.includes("/story");
    const isSlideshow = currentPath.includes("/slideshow");

    // If we are on a known tool page, FORCE the correct path structure
    if (isMp3 || isStory || isSlideshow) {
        let toolSlug = "";
        if (isMp3) toolSlug = "/mp3";
        if (isStory) toolSlug = "/story";
        if (isSlideshow) toolSlug = "/slideshow";

        // If target is default (English), return clean slug (e.g. /mp3)
        if (targetLang === defaultLang) {
            return toolSlug + search;
        }
        // If target is other, return /lang/slug (e.g. /es/mp3)
        return `/${targetLang}${toolSlug}${search}`;
    }

    // --- STANDARD LOGIC FOR OTHER PAGES (Home, Legal, etc) ---
    // 1. Strip existing language prefix
    let pathNoLang = currentPath;
    const langCodes = Object.keys(languages).filter((k) => k !== defaultLang);

    for (const code of langCodes) {
        const prefix = `/${code}`;
        if (pathNoLang === prefix || pathNoLang.startsWith(prefix + "/")) {
            pathNoLang = pathNoLang.slice(prefix.length);
            break;
        }
    }

    if (!pathNoLang.startsWith("/")) pathNoLang = "/" + pathNoLang;

    // 2. Construct New Path
    if (targetLang === defaultLang) {
        return pathNoLang === "/" ? "/" : pathNoLang + search;
    } else {
        if (pathNoLang === "/") {
            return `/${targetLang}${search}`;
        }
        return `/${targetLang}${pathNoLang}${search}`;
    }
}
