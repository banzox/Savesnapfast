---
import Layout from "../layouts/Layout.astro";
import Downloader from "../components/Downloader.jsx";
import { getLangFromUrl, useTranslations } from "../utils/i18n";

const lang = getLangFromUrl(Astro.url);
const t = useTranslations(lang);
---

<Layout
    title={t("nav.contact")}
    description={t("pages.contact.content")?.substring(0, 150)}
    lang={lang}
>
    <article class="hero-section">
        <h1>{t("nav.contact")}</h1>
        <p>{t("pages.contact.content")?.substring(0, 150)}...</p>
        <Downloader client:load t={t} />
    </article>

    <div class="container" style="padding: 2rem;">
        <article
            class="content-box"
            style="background: var(--glass); padding: 3rem; border-radius: 25px; border: 1px solid var(--border);"
        >
            <div style="white-space: pre-line; line-height: 1.8; opacity: 0.9;">
                {t("pages.contact.content")}
                <br /><br />
                <a
                    href="mailto:contact@savetik-fast.xyz"
                    style="color: var(--primary); font-weight: bold;"
                    >contact@savetik-fast.xyz</a
                >
            </div>
        </article>
    </div>
</Layout>
