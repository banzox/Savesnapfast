---
export const prerender = true;
import TextPage from "../components/TextPage.astro";
import { defaultLang } from "../i18n/ui";
---

<TextPage
    titleKey="nav.contact"
    contentKey="pages.contact.content"
    lang={defaultLang}
>
    <div class="contact-link-wrapper">
        <a href="mailto:contact@savetik-fast.xyz" class="contact-email">
            contact@savetik-fast.xyz
        </a>
    </div>
</TextPage>

<style>
    .contact-link-wrapper {
        margin-top: 2rem;
    }
    .contact-email {
        color: var(--primary);
        font-weight: bold;
        text-decoration: none;
        font-size: 1.1rem;
    }
    .contact-email:hover {
        text-decoration: underline;
    }
</style>
