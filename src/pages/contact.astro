---
export const prerender = true;
import TextPage from "../components/TextPage.astro";
import { getLangFromUrl } from "../utils/i18n";

const lang = getLangFromUrl(Astro.url);
---

<TextPage
    titleKey="pages.contact.title"
    contentKey="pages.contact.content"
    lang={lang}
>
    contact@savetik-fast.xyz
</TextPage>

<style>
    .contact-link-wrapper {
        margin-top: 2rem;
    }
    .contact-email {
        color: var(--primary);
        font-weight: bold;
        text-decoration: none;
        font-size: 1.1rem;
    }
    .contact-email:hover {
        text-decoration: underline;
    }
</style>
