---
import TextPage from "../components/TextPage.astro";
import { defaultLang } from "../i18n/ui";

export const prerender = true;

const lang = defaultLang;
---

<TextPage
    titleKey="pages.contact.title"
    contentKey="pages.contact.content"
    lang={lang}
>
    contact@savetik-fast.xyz
</TextPage>

<style>
    .contact-link-wrapper {
        margin-top: 2rem;
    }
    .contact-email {
        color: var(--primary);
        font-weight: bold;
        text-decoration: none;
        font-size: 1.1rem;
    }
    .contact-email:hover {
        text-decoration: underline;
    }
</style>
