---
export const prerender = true;
import Layout from "../layouts/Layout.astro";
import Downloader from "../components/Downloader.jsx";
import {
    getLangFromUrl,
    useTranslations,
    getTranslations,
} from "../utils/i18n";

const currentLang = getLangFromUrl(Astro.url);
const t = useTranslations(currentLang);
const translations = getTranslations(currentLang);
---

<Layout
    title={t("mp3_page.meta_title")}
    description={t("mp3_page.meta_desc")}
    lang={currentLang}
    keywords="tiktok to mp3, tiktok mp3 download, tiktok audio download, convert tiktok to mp3, tiktok music downloader, tiktok sound download, extract tiktok audio, tiktok song download"
>
    <article class="hero-section">
        <h1>
            <i class="fas fa-music" style="color: var(--secondary);"></i>
            {t("mp3_page.title")}
            <span style="color: var(--secondary);">
                {t("mp3_page.subtitle")}</span
            >
        </h1>
        <p>{t("mp3_page.desc")}</p>

        <!-- Downloader Component (configured for MP3 focus) -->
        <Downloader client:load messages={translations.downloader} mode="mp3" />
    </article>

    <section class="container features-grid">
        <div class="feature-card">
            <i class="fas fa-headphones-alt"></i>
            <h3>{t("mp3_page.features.quality.title")}</h3>
            <p>{t("mp3_page.features.quality.desc")}</p>
        </div>
        <div class="feature-card">
            <i class="fas fa-bolt"></i>
            <h3>{t("mp3_page.features.fast.title")}</h3>
            <p>{t("mp3_page.features.fast.desc")}</p>
        </div>
        <div class="feature-card">
            <i class="fas fa-fire"></i>
            <h3>{t("mp3_page.features.trending.title")}</h3>
            <p>{t("mp3_page.features.trending.desc")}</p>
        </div>
        <div class="feature-card">
            <i class="fas fa-mobile-alt"></i>
            <h3>{t("mp3_page.features.device.title")}</h3>
            <p>{t("mp3_page.features.device.desc")}</p>
        </div>
        <div class="feature-card">
            <i class="fas fa-bell"></i>
            <h3>{t("mp3_page.features.ringtone.title")}</h3>
            <p>{t("mp3_page.features.ringtone.desc")}</p>
        </div>
        <div class="feature-card">
            <i class="fas fa-infinity"></i>
            <h3>{t("mp3_page.features.unlimited.title")}</h3>
            <p>{t("mp3_page.features.unlimited.desc")}</p>
        </div>
    </section>

    <section class="container how-to-box shadow-box">
        <h2 style="text-align: center; margin-bottom: 30px;">
            {t("mp3_page.how_to.title")}
        </h2>
        <div class="steps-wrapper">
            <div class="step">
                <div class="step-num">1</div>
                <h3>{t("how_to.step1_title")}</h3>
                <p>{t("mp3_page.how_to.step1")}</p>
            </div>
            <div class="step">
                <div class="step-num">2</div>
                <h3>{t("how_to.step2_title")}</h3>
                <p>{t("mp3_page.how_to.step2")}</p>
            </div>
            <div class="step">
                <div class="step-num">3</div>
                <h3>{t("how_to.step3_title")}</h3>
                <p>{t("mp3_page.how_to.step3")}</p>
            </div>
        </div>
    </section>

    <section class="container shadow-box" style="margin-top: 2rem;">
        <div class="content-box">
            <h2>
                <i class="fas fa-headphones" style="color: var(--secondary);"
                ></i>
                {t("mp3_page.about_title")}
            </h2>
            <p>{t("mp3_page.about_content")}</p>
        </div>
    </section>
</Layout>
