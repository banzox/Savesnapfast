---
export const prerender = true;
import Layout from "../layouts/Layout.astro";
import Downloader from "../components/Downloader.jsx";
import {
    getLangFromUrl,
    useTranslations,
    getTranslations,
} from "../utils/i18n";
import { ui, defaultLang } from "../i18n/ui";

const lang = getLangFromUrl(Astro.url);
const t = useTranslations(lang);
const translations = getTranslations(lang);
const defaultTranslations = ui[defaultLang];

const downloaderMessages = {
    ...defaultTranslations.downloader,
    ...(translations?.downloader || {}),
};
---

<Layout
    title={`${t("404.title")} - SaveTikFast`}
    lang={lang}
    description={t("404.title")}
>
    <article class="hero-section">
        <h1 style="font-size: 5rem; color: var(--secondary);">404</h1>
        <p style="font-size: 1.5rem; margin-bottom: 2rem;">
            {t("404.title")}
        </p>

        <Downloader client:load messages={downloaderMessages} />

        <div style="margin-top: 2rem;">
            <a
                href="/"
                class="btn-download"
                style="text-decoration: none; display: inline-block; width: auto;"
                >{t("404.home_btn")}</a
            >
        </div>
    </article>
</Layout>
