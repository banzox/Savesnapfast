---
export const prerender = true;
import Layout from "../layouts/Layout.astro";
import Downloader from "../components/Downloader.jsx";
import {
    getLangFromUrl,
    useTranslations,
    getTranslations,
} from "../utils/i18n";

const lang = getLangFromUrl(Astro.url);
const t = useTranslations(lang);
const translations = getTranslations(lang);
---

<Layout
    lang={lang}
    title={t("pages.disclaimer.title")}
    description={t("pages.disclaimer.content")?.substring(0, 150)}
>
    <article class="hero-section">
        <h1 style="color: #ffc107;">{t("pages.disclaimer.title")}</h1>
        <p>{t("pages.disclaimer.content")?.substring(0, 150)}...</p>
        <Downloader client:load messages={translations.downloader} />
    </article>

    <div class="container" style="padding: 2rem;">
        <article
            class="content-box"
            style="background: var(--glass); padding: 3rem; border-radius: 25px; border: 1px solid var(--border);"
        >
            <div style="white-space: pre-line; line-height: 1.8; opacity: 0.9;">
                {t("pages.disclaimer.content")}
            </div>
        </article>
    </div>
</Layout>
