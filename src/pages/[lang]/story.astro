---
export const prerender = true;
import Layout from "../../layouts/Layout.astro";
import Downloader from "../../components/Downloader.jsx";
import FAQ from "../../components/FAQ.astro";
import { languages, defaultLang, ui } from "../../i18n/ui";
import { useTranslations, getTranslations } from "../../utils/i18n";

export async function getStaticPaths() {
    return Object.keys(languages).map((lang) => ({
        params: { lang },
    }));
}

const { lang } = Astro.params;
const currentLang = lang || defaultLang;
const t = useTranslations(currentLang);
const translations = getTranslations(currentLang);
const defaultTranslations = ui[defaultLang];

// --- Safe Downloader Messages ---
const downloaderMessages = {
    ...defaultTranslations.downloader,
    ...(translations.downloader || {}),
};

// --- FAQ Array Generation ---
const faqItems = Array.from({ length: 10 }, (_, i) => ({
    question: t(`story_page.faq.q${i + 1}`),
    answer: t(`story_page.faq.a${i + 1}`),
}));
---

<Layout
    title={t("story_page.meta_title")}
    description={t("story_page.meta_desc")}
    lang={currentLang}
>
    <article class="hero-section">
        <h1>
            <i class="fas fa-images" style="color: var(--secondary);"></i>
            {t("story_page.title")}
        </h1>
        <p>{t("story_page.desc")}</p>

        <Downloader client:load messages={downloaderMessages} mode="story" />
    </article>

    <section class="container features-grid">
        <div class="feature-card">
            <i class="fas fa-user-secret"></i>
            <h3>{t("story_page.features.anonymous.title")}</h3>
            <p>{t("story_page.features.anonymous.desc")}</p>
        </div>
        <div class="feature-card">
            <i class="fas fa-layer-group"></i>
            <h3>{t("story_page.features.slides.title")}</h3>
            <p>{t("story_page.features.slides.desc")}</p>
        </div>
        <div class="feature-card">
            <i class="fas fa-clock"></i>
            <h3>{t("story_page.features.expire.title")}</h3>
            <p>{t("story_page.features.expire.desc")}</p>
        </div>
        <div class="feature-card">
            <i class="fas fa-hd"></i>
            <h3>{t("story_page.features.quality.title")}</h3>
            <p>{t("story_page.features.quality.desc")}</p>
        </div>
        <div class="feature-card">
            <i class="fas fa-mobile-alt"></i>
            <h3>{t("story_page.features.device.title")}</h3>
            <p>{t("story_page.features.device.desc")}</p>
        </div>
        <div class="feature-card">
            <i class="fas fa-heart"></i>
            <h3>{t("story_page.features.favorites.title")}</h3>
            <p>{t("story_page.features.favorites.desc")}</p>
        </div>
    </section>

    <section class="container how-to-box shadow-box">
        <h2 style="text-align: center; margin-bottom: 30px;">
            {t("story_page.how_to.title")}
        </h2>
        <div class="steps-wrapper">
            <div class="step">
                <div class="step-num">1</div>
                <h3>{t("how_to.step1_title")}</h3>
                <p>{t("story_page.how_to.step1")}</p>
            </div>
            <div class="step">
                <div class="step-num">2</div>
                <h3>{t("how_to.step2_title")}</h3>
                <p>{t("story_page.how_to.step2")}</p>
            </div>
            <div class="step">
                <div class="step-num">3</div>
                <h3>{t("how_to.step3_title")}</h3>
                <p>{t("story_page.how_to.step3")}</p>
            </div>
        </div>
    </section>

    <FAQ t={t} items={faqItems} />

    <section class="container shadow-box" style="margin-top: 2rem;">
        <div class="content-box">
            <h2>
                <i class="fas fa-photo-film" style="color: var(--secondary);"
                ></i>
                {t("story_page.about_title")}
            </h2>
            <p>{t("story_page.about_content")}</p>
        </div>
    </section>
</Layout>
