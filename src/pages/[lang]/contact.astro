---
import Layout from "../../layouts/Layout.astro";
import { ui, defaultLang, languages } from "../../i18n/ui";

export async function getStaticPaths() {
    return Object.keys(languages).map((lang) => ({ params: { lang } }));
}

const { lang } = Astro.params;
const currentLang = lang || defaultLang;

function t(key: keyof (typeof ui)[typeof defaultLang]) {
    return ui[currentLang][key] || ui[defaultLang][key] || key;
}
---

<Layout
    title={t("pages.contact.title")}
    description={t("pages.contact.content").substring(0, 150)}
    lang={currentLang}
>
    <div class="container" style="margin-top: 120px; text-align: center;">
        <div
            class="content-box"
            style="max-width: 600px; margin: auto; background: var(--glass); padding: 3rem; border-radius: 25px;"
        >
            <h1 style="color: var(--secondary); margin-bottom: 20px;">
                {t("pages.contact.title")}
            </h1>
            <div
                style="margin-bottom: 30px; opacity: 0.8; white-space: pre-line;"
            >
                {t("pages.contact.content")}
            </div>
            <a
                href="mailto:support@savetik-fast.xyz"
                class="email-link"
                style="color: var(--secondary); text-decoration: none; font-size: 1.2rem; font-weight: bold; border: 1px solid var(--secondary); padding: 10px 20px; border-radius: 10px;"
            >
                <i class="fas fa-envelope"></i> support@savetik-fast.xyz
            </a>
        </div>
    </div>
</Layout>
