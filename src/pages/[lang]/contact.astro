---
import TextPage from "../../components/TextPage.astro";
import { languages } from "../../i18n/ui";

const { lang } = Astro.params;

if (!lang || !languages[lang as keyof typeof languages]) {
    return Astro.redirect("/404");
}
---

<TextPage
    titleKey="pages.contact.title"
    contentKey="pages.contact.content"
    lang={lang}
>
    contact@savetik-fast.xyz
</TextPage>

<style>
    .contact-link-wrapper {
        margin-top: 2rem;
    }
    .contact-email {
        color: var(--primary);
        font-weight: bold;
        text-decoration: none;
        font-size: 1.1rem;
    }
    .contact-email:hover {
        text-decoration: underline;
    }
</style>
