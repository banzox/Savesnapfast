---
// export const prerender = true; // DISABLED FOR SSR
import ContactForm from "../../components/ContactForm.jsx";
import Layout from "../../layouts/Layout.astro";
import TextPage from "../../components/TextPage.astro"; // Added missing import
import { languages, defaultLang } from "../../i18n/ui";
import { useTranslations } from "../../utils/i18n"; // Fixed import source

// SSR Mode
const { lang } = Astro.params;
const currentLang = (lang || defaultLang) as keyof typeof languages; // Fixed Type Error

if (currentLang !== defaultLang && !languages[currentLang]) {
    return Astro.redirect("/404");
}

const t = useTranslations(currentLang);
---

<TextPage
    titleKey="pages.contact.title"
    contentKey="pages.contact.content"
    lang={currentLang}
>
    contact@savetik-fast.xyz
</TextPage>

<style>
    .contact-link-wrapper {
        margin-top: 2rem;
    }
    .contact-email {
        color: var(--primary);
        font-weight: bold;
        text-decoration: none;
        font-size: 1.1rem;
    }
    .contact-email:hover {
        text-decoration: underline;
    }
</style>
