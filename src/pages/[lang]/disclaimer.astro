---
// export const prerender = true; // DISABLED FOR SSR
import TextPage from "../../components/TextPage.astro";
import { languages, defaultLang } from "../../i18n/ui";

// SSR Mode - Dynamic Handling
const { lang } = Astro.params;
const currentLang = (lang || defaultLang) as keyof typeof languages;

if (currentLang !== defaultLang && !languages[currentLang]) {
    return Astro.redirect("/404");
}
---

<TextPage
    titleKey="pages.disclaimer.title"
    contentKey="pages.disclaimer.content"
    lang={currentLang}
/>
