---
import "../styles/global.css";
import Navbar from "../components/Navbar.astro";
import Schema from "../components/Schema.astro";
import Footer from "../components/Footer.astro";
import { languages } from "../i18n/ui";

interface Props {
    title: string;
    description: string;
    lang?: string;
    keywords?: string;
}

const { title, description, lang = "en", keywords } = Astro.props;
const canonicalURL = new URL(
    Astro.url.pathname,
    Astro.site || "https://savetik-fast.xyz",
);
---

<!doctype html>
<html lang={lang} dir={lang === "ar" ? "rtl" : "ltr"}>
    <head>
        <meta charset="UTF-8" />
        <meta name="description" content={description} />
        {keywords && <meta name="keywords" content={keywords} />}
        <meta name="viewport" content="width=device-width, initial-scale=1.0" />
        <link rel="icon" type="image/svg+xml" href="/favicon.svg" />
        <meta name="generator" content={Astro.generator} />
        <title>{title}</title>
        <link
            rel="stylesheet"
            href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/6.4.0/css/all.min.css"
        />

        <!-- Hreflang Tags for SEO -->
        <link
            rel="alternate"
            hreflang="x-default"
            href={new URL("/", Astro.site || "https://savetik-fast.xyz").href}
        />
        {
            Object.keys(languages).map((l) => (
                <link
                    rel="alternate"
                    hreflang={l}
                    href={
                        new URL(
                            l === "en" ? "/" : `/${l}`,
                            Astro.site || "https://savetik-fast.xyz",
                        ).href
                    }
                />
            ))
        }

        <Schema lang={lang} />

        <meta name="author" content="SaveTikFast" />

        <!-- Open Graph / Facebook -->
        <meta property="og:type" content="website" />
        <meta property="og:url" content={canonicalURL} />
        <meta property="og:title" content={title} />
        <meta property="og:description" content={description} />
        <meta
            property="og:image"
            content="https://savetik-fast.xyz/og-image.png"
        />
        <meta property="og:site_name" content="SaveTikFast" />
        <meta property="og:locale" content={lang} />

        <!-- Twitter Card -->
        <meta name="twitter:card" content="summary_large_image" />
        <meta name="twitter:url" content={canonicalURL} />
        <meta name="twitter:title" content={title} />
        <meta name="twitter:description" content={description} />
        <meta
            name="twitter:image"
            content="https://savetik-fast.xyz/og-image.png"
        />

        <!-- Canonical URL -->
        <link rel="canonical" href={canonicalURL} />

        <link rel="manifest" href="/manifest.json" />

        <!-- Preconnect & Prefetch -->
        <link rel="preconnect" href="https://fonts.googleapis.com" />
        <link rel="preconnect" href="https://fonts.gstatic.com" crossorigin />
        <link rel="dns-prefetch" href="https://api.savetik-fast.xyz" />

        <!-- Fonts -->
        <link
            href="https://fonts.googleapis.com/css2?family=Tajawal:wght@400;700;800&family=Inter:wght@400;600;700&display=swap"
            rel="stylesheet"
        />

        <script is:inline>
            // Initialize theme
            const theme = (() => {
                if (
                    typeof localStorage !== "undefined" &&
                    localStorage.getItem("theme")
                ) {
                    return localStorage.getItem("theme");
                }
                if (
                    window.matchMedia("(prefers-color-scheme: light)").matches
                ) {
                    return "light";
                }
                return "dark";
            })();

            if (theme === "light") {
                document.documentElement.setAttribute("data-theme", "light");
            } else {
                document.documentElement.removeAttribute("data-theme");
            }

            window.localStorage.setItem("theme", theme);

            document.addEventListener("astro:after-swap", () => {
                const theme = localStorage.getItem("theme");
                if (theme === "light") {
                    document.documentElement.setAttribute(
                        "data-theme",
                        "light",
                    );
                } else {
                    document.documentElement.removeAttribute("data-theme");
                }
            });
        </script>
    </head>
    <body>
        <Navbar lang={lang} />

        <!-- EMERGENCY HOTFIX: NUCLEAR CSS RESET v2 -->
        <style is:global>
            /* 1. MAPPING VARIABLES (The "Bridge" Fix) */
            /* This forces the layout components to use our new safe colors */
            :root {
                --safe-bg: #ffffff;
                --safe-text: #000000;

                /* Override Project Vars */
                --bg-main: var(--safe-bg) !important;
                --text-main: var(--safe-text) !important;
                --bg-gradient: none !important; /* Kill complex gradients */
                --bg-header: rgba(255, 255, 255, 0.95) !important;
            }

            :root[data-theme="dark"],
            :root.dark {
                --safe-bg: #0f172a;
                --safe-text: #ffffff;

                /* Override Project Vars */
                --bg-main: var(--safe-bg) !important;
                --text-main: var(--safe-text) !important;
                --bg-header: rgba(15, 23, 42, 0.95) !important;
            }

            /* 2. UNIVERSAL COLOR RESET */
            body,
            #app,
            main,
            .main-content {
                background-color: var(--safe-bg) !important;
                background: var(--safe-bg) !important;
                color: var(--safe-text) !important;
            }

            p,
            h1,
            h2,
            h3,
            h4,
            h5,
            h6,
            span,
            li,
            a:not(.btn) {
                color: var(--safe-text) !important;
            }

            /* 3. MOBILE LAYOUT ENFORCER */
            @media (max-width: 768px) {
                /* RESET GRID */
                body,
                #app,
                main,
                .main-container,
                .grid-wrapper,
                #main-content {
                    display: block !important;
                    grid-template-columns: 1fr !important;
                    width: 100% !important;
                    max-width: 100vw !important;
                    overflow-x: hidden !important;
                    margin: 0 !important;
                    padding-left: 0 !important; /* Kill Sidebar Space */
                    padding-right: 0 !important;
                }

                /* CONTENT PADDING (So it's not glued to edge) */
                #main-content {
                    padding: 20px !important;
                }

                /* HIDE SIDEBAR / OFF CANVAS */
                aside,
                .sidebar,
                #sidebar,
                .nav-links {
                    position: fixed !important;
                    top: 0 !important;
                    left: 0 !important;
                    bottom: 0 !important;
                    width: 80% !important;
                    height: 100vh !important;
                    background-color: var(--safe-bg) !important;
                    z-index: 9999 !important;
                    transform: translateX(-100%) !important;
                    transition: transform 0.3s ease !important;
                    display: flex !important;
                    flex-direction: column !important;
                    padding-top: 20px !important;
                    border-right: 1px solid rgba(128, 128, 128, 0.2) !important;
                    box-shadow: none !important;
                }

                /* ACTIVE STATE */
                aside.active,
                .sidebar.active,
                #sidebar.active,
                .nav-links.active {
                    transform: translateX(0) !important;
                    box-shadow: 100vw 0 0 rgba(0, 0, 0, 0.5) !important; /* Fake Backdrop hack */
                }
            }
        </style>

        <main id="main-content" class="page-enter">
            <slot />
        </main>

        <Footer lang={lang} />

        <!-- PART 3: Bulletproof Toggle Script -->
        <script is:inline>
            document.addEventListener("DOMContentLoaded", () => {
                const btn = document.getElementById("menu-btn");
                const sidebar = document.querySelector(".nav-links"); // Using class from Navbar
                const overlay = document.getElementById("nav-overlay");

                if (btn && sidebar) {
                    btn.addEventListener("click", (e) => {
                        e.stopPropagation(); // Stop bubbling
                        sidebar.classList.toggle("active");
                        btn.classList.toggle("active");
                        if (overlay) overlay.classList.toggle("active");
                        document.body.style.overflow =
                            sidebar.classList.contains("active")
                                ? "hidden"
                                : "";
                    });

                    // Close on overlay click
                    if (overlay) {
                        overlay.addEventListener("click", () => {
                            sidebar.classList.remove("active");
                            btn.classList.remove("active");
                            overlay.classList.remove("active");
                            document.body.style.overflow = "";
                        });
                    }
                }
            });
        </script>
    </body>
</html>
